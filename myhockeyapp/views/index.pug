                                    th ga
                                    th w
                                    th l
                                    th t
                                    th pim                                    
                            tbody
                                each rink in dashboard.rinks
                                    tr
                                        td #{rink[0]}
                                        td #{rink[1]}
                                        td #{rink[2]}
                                        td #{rink[3]}
                                        td #{rink[4]}
                                        td #{rink[5]}
                                        td #{rink[6]}
                                        td #{rink[7]}

