extends layout

block links
    link(href='/stylesheets/c3.css' rel='stylesheet' type='text/css')
    link(href='/stylesheets/style.css' rel='stylesheet' type='text/css')
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
        
block scripts    
    script(src='/javascripts/d3.min.js' charset='utf-8' type='text/javascript')
    script(src='/javascripts/c3.min.js' type='text/javascript')
    script(src='/javascripts/jquery-2.2.1.min.js' type='text/javascript')    

block content
    h1= title
    div
        form.form-horizontal(name='game_start', method='post' action='/gameentry/gamestart')
            div.form-group
                label.col-sm-3.control-label(for='streamId') StreamId
                div.col-sm-9
                    input#streamId.form-control(type='text', name='streamId')
            div.form-group
                label.col-sm-3.control-label(for='number') Game Number
                div.col-sm-9
                    input#number.form-control(type='text', name='number')
            div.form-group
                label.col-sm-3.control-label(for='date') Date
                div.col-sm-9
                    input#date.form-control(type='date', name='date')
            div.form-group
                label.col-sm-3.control-label(for='time') Time
                div.col-sm-9
                    input#time.form-control(type='time', name='time')
            div.form-group
                label.col-sm-3.control-label(for='typeOptions') Type
                div.col-sm-9
                    label.radio-inline 
                        input#typeOption0(type='radio' name='typeOptions' value='Exhibition')
                        | Exhibition
                    label.radio-inline 
                        input#typeOption1(type='radio' name='typeOptions' value='Regular Season')
                        | Regular Season
                    label.radio-inline
                        input#typeOption2(type='radio' name='typeOptions' value='Playoff') 
                        | Playoff                        
                    label.radio-inline
                        input#typeOption3(type='radio' name='typeOptions' value='Tournament') 
                        | Tournament                        
            div.form-group
                label.col-sm-3.control-label(for='homeawayOptions') Home or Away
                div.col-sm-9
                    label.radio-inline
                        input#homeOption1(type='radio' name='homeawayOptions' value='Home')
                        | Home
                    label.radio-inline
                        input#homeOption2(type='radio' name='homeawayOptions' value='Away')
                        | Away
            div.form-group
                label.col-sm-3.control-label(for='opponent') Opponent
                div.col-sm-9
                    input#opponent.form-control(type='text', name='opponent')
            div.form-group
                label.col-sm-3.control-label(for='arena') Arena
                div.col-sm-9
                    input#arena.form-control(type='text', name='arena')
            div.form-group
                div.col-sm-offset-3.col-sm-9
                    a.btn.btn-default(href='/gameentry', title='Cancel') Cancel
                    &nbsp;&nbsp;&nbsp;&nbsp;
                    input.btn.btn-primary(type='submit', value='Save')            