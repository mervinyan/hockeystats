extends layout

block links
    link(href='/stylesheets/c3.css' rel='stylesheet' type='text/css')
    link(href='/stylesheets/style.css' rel='stylesheet' type='text/css')
        
block scripts    
    script(src='/javascripts/d3.min.js' charset='utf-8' type='text/javascript')
    script(src='/javascripts/c3.min.js' type='text/javascript')
    script(src='/javascripts/jquery-2.2.1.min.js' type='text/javascript')    

block content
    h1= title
    p Welcome to #{title} 
    div
        form(name='home_score', method='post' action='/gameentry/homescore')
            div.input
                span.label Stream Id
                input(type='text', name='streamId')
            div.input
                span.label Period
                input(type='text', name='period')
            div.input
                span.label Time
                input(type='text', name='time')
            div.input
                span.label Kind
                input(type='text', name='kind')
            div.input
                span.label Score
                input(type='text', name='score')
            div.input
                span.label Assist1
                input(type='text', name='assist1')
            div.input
                span.label Assist2
                input(type='text', name='assist2')
            div.actions
                input(type='submit', value='Save')            


            