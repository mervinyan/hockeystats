extends layout

block links
    link(href='/stylesheets/c3.css' rel='stylesheet' type='text/css')
    link(href='/stylesheets/style.css' rel='stylesheet' type='text/css')
        
block scripts    
    script(src='/javascripts/d3.min.js' charset='utf-8' type='text/javascript')
    script(src='/javascripts/c3.min.js' type='text/javascript')
    script(src='/javascripts/jquery-2.2.1.min.js' type='text/javascript')    

block content
    h1= title
    p Welcome to #{title} 
    div
        p #{message}
    div
        button(class='btn', onClick="alert('game start')").
            Game Start
        a(href='/gameentry/gamestart', title='Start Game') Game Start
    div
        button(class='btn').
            Home Score
        a(href='/gameentry/homescore', title='Home Score') Home Score
    div
        button(class='btn').
            Home Penalty
        a(href='/gameentry/homepenalty', title='Home Penalty') Home Penalty
    div
        button(class='btn').
            Visitor Score
        a(href='/gameentry/guestscore', title='Guest Score') Guest Score            
    div
        button(class='btn').
            Visitor Penalty
        a(href='/gameentry/guestpenalty', title='Guest Penalty') Guest Penalty
    div
        button(class='btn').
            Game End
        a(href='/gameentry/gameend', title='Game End') Game End
         


            