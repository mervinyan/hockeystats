block content
    div.row
        div.col-lg-12
            h1.page-header #{title}
            ol.breadcrumb
                li
                    i.fa.fa-list-ul
                    a(href="/teamstats") 
                        | Scheduled Games               
    div.row
        div.col-lg-12
            div.panel.panel-default
                div.panel-heading
                    button#scheduleNewGame.btn.btn-primary(data-toggle="modal" data-target="#scheduleGameModal") Schedule New Game
                div.panel-body
                    div.dataTable_wrapper
                        table#datatable-schedulegames.table.table-hover
                            thead
                                tr
                                    th #
                                    th Date
                                    th Time
                                    th Opponent
                                    th Home/Away
                                    th Arena
                                    th Type
                            tbody
                                // each game in games
                                //     tr
                                //         td
                                //             a(href="/gameentry/" + encodeURIComponent(game.streamid)) #{game.number} 
                                //         td #{game.date}
                                //         td #{game.time}
                                //         td #{game.opponent}
                                //         td #{game.homeaway}
                                //         td #{game.arena}
                                //         td #{game.type}
                                        
    div#scheduleGameModal.modal.fade(tabIndex="-1" role="dialog" aria-labelledby="scheduleGameModalLabel")
        div.modal-dialog(role="document")
            div.modal-content
                div.modal-header
                    button.close(type="button" data-dismiss="modal" aria-label="Close")
                        span(aria-hidden="true") &times;
                    h4#scheduleGameModalLabel.mdoal-title Schedule Game
                form#scheduleGameForm.form-horizontal(name='game_schedule' method='post' action='/gameentry/add')
                    div.modal-body
                        div.form-group
                            label.col-sm-3.control-label(for='number') Game Number
                            div.col-sm-9
                                input#number.form-control(type='text', name='number')
                        div.form-group
                            label.col-sm-3.control-label(for='date') Date
                            div.col-sm-9
                                input#date.form-control(type='date', name='date')
                        div.form-group
                            label.col-sm-3.control-label(for='time') Time
                            div.col-sm-9
                                input#time.form-control(type='time', name='time')
                        div.form-group
                            label.col-sm-3.control-label(for='typeOptions') Type
                            div.col-sm-9
                                label.radio-inline 
                                    input#typeOption0(type='radio' name='typeOptions' value='Exhibition')
                                    | Exhibition
                                label.radio-inline 
                                    input#typeOption1(type='radio' name='typeOptions' value='Regular Season')
                                    | Regular Season
                                label.radio-inline
                                    input#typeOption2(type='radio' name='typeOptions' value='Playoff') 
                                    | Playoff                        
                                label.radio-inline
                                    input#typeOption3(type='radio' name='typeOptions' value='Tournament') 
                                    | Tournament                        
                                label.radio-inline
                                    input#typeOption4(type='radio' name='typeOptions' value='Provincial') 
                                    | Provincial                        
                        div.form-group
                            label.col-sm-3.control-label(for='homeawayOptions') Home/Away
                            div.col-sm-9
                                label.radio-inline
                                    input#homeOption1(type='radio' name='homeawayOptions' value='Home')
                                    | Home
                                label.radio-inline
                                    input#homeOption2(type='radio' name='homeawayOptions' value='Away')
                                    | Away
                        div.form-group
                            label.col-sm-3.control-label(for='opponent') Opponent
                            div.col-sm-9
                                input#opponent.form-control(type='text', name='opponent')
                        div.form-group
                            label.col-sm-3.control-label(for='arena') Arena
                            div.col-sm-9
                                input#arena.form-control(type='text', name='arena')  
                    div.modal-footer
                        button.btn.btn-default(type="button" data-dismiss="modal") Close
                        button#submit1.btn.btn-primary(type="button") Save      
        
block scripts
    <!-- D3 Chart JavaScript -->
    script(src='/bower_components/d3/d3.min.js' charset='utf-8' type='text/javascript')

    <!-- C3 Chart JavaScript -->
    script(src='/bower_components/c3/c3.min.js' type='text/javascript')

    <!-- jQuery -->
    script(src="/bower_components/jquery/dist/jquery.min.js" type="text/javascript")
    
    <!-- Bootstrap Core JavaScript -->
    script(src="/bower_components/bootstrap/dist/js/bootstrap.min.js" type="text/javascript")

    <!-- Metis Menu Plugin JavaScript -->
    script(src="/bower_components/metisMenu/dist/metisMenu.min.js" type="text/javascript")

    <!-- DataTables JavaScript -->
    script(src="/bower_components/datatables/media/js/jquery.dataTables.min.js" type="text/javascript")
    script(src="/bower_components/datatables-plugins/integration/bootstrap/3/dataTables.bootstrap.min.js" type="text/javascript")

    <!-- Custom Theme JavaScript -->
    script(src="/bower_components/sb-admin-2/js/sb-admin-2.js" type="text/javascript")

    script(type="text/javascript").
        $(document).ready(function() {
            $('#datatable-schedulegames').DataTable({
                responsive: true,
                "ajax": "/gameentry/fetch",
                "columns": [
                    {"data": "number"},
                    {"data": "date"},
                    {"data": "time"},
                    {"data": "opponent"},
                    {"data": "homeaway"},
                    {"data": "arena"},
                    {"data": "type"}                    
                ]
            });
        });
                                      
    script(type="text/javascript").
        $(function() {
            $("#submit1").on('click', function() {
                var postData = $("#scheduleGameForm").serializeArray();
                console.log(postData);
                var formURL = $("#scheduleGameForm").attr("action");
                $.ajax(
                    {
                        url : formURL,
                        type: "POST",
                        data : postData,
                        success:function(data, textStatus, jqXHR) {
                            $("#scheduleGameModal").modal('hide');
                            $('#datatable-schedulegames').DataTable().fnDestroy();
                            $('#datatable-schedulegames').DataTable({
                                responsive: true,
                                "ajax": "/gameentry/fetch",
                                "columns": [
                                    {"data": "number"},
                                    {"data": "date"},
                                    {"data": "time"},
                                    {"data": "opponent"},
                                    {"data": "homeaway"},
                                    {"data": "arena"},
                                    {"data": "type"}                    
                                ]
                            });
                        },
                        error: function(jqXHR, textStatus, errorThrown) {
                        }
                    });
                });
            });
