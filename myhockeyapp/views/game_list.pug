extends layout

block links
    link(href='/stylesheets/c3.css' rel='stylesheet' type='text/css')
    link(href='/stylesheets/style.css' rel='stylesheet' type='text/css')
    link(href="/stylesheets/bootstrap.min.css" rel="stylesheet" type="text/css")
    link(href="/stylesheets/sb-admin.css" rel="stylesheet" type="text/css")        
    link(href="/stylesheets/font-awesome.min.css" rel="stylesheet" type="text/css")   
            
block scripts    
    script(src='/javascripts/d3.min.js' charset='utf-8' type='text/javascript')
    script(src='/javascripts/c3.min.js' type='text/javascript')
    script(src='/javascripts/jquery-2.2.1.min.js' type='text/javascript')    
    script(src='/javascripts/bootstrap.min.js' type='text/javascript')
    
block content
    div.container-fluid
        div.row
            div.col-md-12
                h1.page-header #{title}   
                ol.breadcrumb
                    li
                        i.fa.fa-dashboard
                        a(href="/") 
                            | Hockey Stats
                    li
                        i.fa.fa-list-ul
                        a(href="/gameentry") 
                            | Games                 
        div.row
            div.col-md-12
                button.btn.btn-primary(data-toggle="modal" data-target="#scheduleGameModal") Schedule a New Game
        div.row
            div.col-md-12.table-responsive
                table.table
                    thead
                        tr
                            th #
                            th Date
                            th Time
                            th Opponent
                            th Home/Away
                            th Arena
                            th Type
                    tbody
                        each game in games
                            tr
                                td
                                    a(href="/gameentry/" + encodeURIComponent(game.streamid)) #{game.number} 
                                td #{game.date}
                                td #{game.time}
                                td #{game.opponent}
                                td #{game.homeaway}
                                td #{game.arena}
                                td #{game.type}
                                        
    div#scheduleGameModal.modal.fade(tabIndex="-1" role="dialog" aria-labelledby="scheduleGameModalLabel")
        div.modal-dialog(role="document")
            div.modal-content
                div.modal-header
                    button.close(type="button" data-dismiss="modal" aria-label="Close")
                        span(aria-hidden="true") &times;
                    h4#scheduleGameModalLabel.mdoal-title Schedule Game
                form#scheduleGameForm.form-horizontal(name='game_schedule' method='post' action='/gameentry/add')
                    div.modal-body
                        div.form-group
                            label.col-sm-3.control-label(for='number') Game Number
                            div.col-sm-9
                                input#number.form-control(type='text', name='number')
                        div.form-group
                            label.col-sm-3.control-label(for='date') Date
                            div.col-sm-9
                                input#date.form-control(type='date', name='date')
                        div.form-group
                            label.col-sm-3.control-label(for='time') Time
                            div.col-sm-9
                                input#time.form-control(type='time', name='time')
                        div.form-group
                            label.col-sm-3.control-label(for='typeOptions') Type
                            div.col-sm-9
                                label.radio-inline 
                                    input#typeOption0(type='radio' name='typeOptions' value='Exhibition')
                                    | Exhibition
                                label.radio-inline 
                                    input#typeOption1(type='radio' name='typeOptions' value='Regular Season')
                                    | Regular Season
                                label.radio-inline
                                    input#typeOption2(type='radio' name='typeOptions' value='Playoff') 
                                    | Playoff                        
                                label.radio-inline
                                    input#typeOption3(type='radio' name='typeOptions' value='Tournament') 
                                    | Tournament                        
                                label.radio-inline
                                    input#typeOption4(type='radio' name='typeOptions' value='Provincial') 
                                    | Provincial                        
                        div.form-group
                            label.col-sm-3.control-label(for='homeawayOptions') Home/Away
                            div.col-sm-9
                                label.radio-inline
                                    input#homeOption1(type='radio' name='homeawayOptions' value='Home')
                                    | Home
                                label.radio-inline
                                    input#homeOption2(type='radio' name='homeawayOptions' value='Away')
                                    | Away
                        div.form-group
                            label.col-sm-3.control-label(for='opponent') Opponent
                            div.col-sm-9
                                input#opponent.form-control(type='text', name='opponent')
                        div.form-group
                            label.col-sm-3.control-label(for='arena') Arena
                            div.col-sm-9
                                input#arena.form-control(type='text', name='arena')  
                    div.modal-footer
                        button.btn.btn-default(type="button" data-dismiss="modal") Close
                        button.btn.btn-primary(type="submit") Save            
    