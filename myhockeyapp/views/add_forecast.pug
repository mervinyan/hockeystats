block content
    div.row
        div.col-md-12
            h1.page-header #{title}
            ol.breadcrumb
                li
                    i.fa.fa-dashboard
                    a(href="/") 
                        | Add Forecast
    div.row
        div.col-md-12
            form#addForecastForm.form-horizontal(name='add_forecast' method='post' action='/transactions/addforecast' novalidate)
                div.form-group
                    label.col-sm-3.control-label(for='account') Account
                    div.col-sm-9.dropdown
                        div.btn-group
                            button#account.btn.btn-default.dropdown-toggle.form-control(type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true")
                                | 
                                span.caret
                            ul.dropdown-menu(aria-labelledby="account")
                                li
                                    a()
                                        | PC CHQ
                                li
                                    a()
                                        | RBC CHQ
                                li
                                    a()
                                        | RBC Savings
                div.form-group
                    label.col-sm-3.control-label(for='date') Date
                    div.col-sm-9
                        input#date.form-control(type='date', name='date')
                div.form-group
                    label.col-sm-3.control-label(for='repeats') Repeats
                    div.col-sm-9.dropdown
                        div.btn-group
                            button#repeats.btn.btn-default.dropdown-toggle.form-control(type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true")
                                | Monthly
                                span.caret
                            ul.dropdown-menu(aria-labelledby="repeats")
                                li
                                    a()
                                        | Never
                                li
                                    a()
                                        | Weekly
                                li
                                    a()
                                        | Monthly
                                li
                                    a()
                                        | Yearly
                div.form-group
                    label.col-sm-3.control-label(for='repeatevery') Repeat every
                    div.col-sm-9.dropdown
                        div.btn-group
                            button#repeatevery.btn.btn-default.dropdown-toggle.form-control(type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true")
                                | 1
                                span.caret
                            ul.dropdown-menu(aria-labelledby="repeatevery") 
                                li
                                    a()
                                        | 1
                                li
                                    a()
                                        | 2
                                li
                                    a()
                                        | 3
                                li
                                    a()
                                        | 4
                                li
                                    a()
                                        | 5
                                li
                                    a()
                                        | 6
                                li
                                    a()
                                        | 7
                                li
                                    a()
                                        | 8    
                        lable#unit  Months                                                                                                            
                div.form-group
                    label.col-sm-3.control-label(for='starts') Starts
                    div.col-sm-9
                        input#starts.form-control(type='date', name='starts')
                div.form-group
                    label.col-sm-3.control-label(for='ends') Ends
                    div.col-sm-9
                        div.radio
                            label
                                input(type="radio" name="endOptions" id="endOption1" value="never" checked)
                                | Never
                        div.radio.input-group
                            label
                                input(type="radio" name="endOptions" id="endOption2" value="after")
                                | After 
                                input(type='text', name='occurrences')  
                                | occurrences
                        div.radio.input-group
                            label
                                input(type="radio" name="endOptions" id="endOption3" value="on")
                                | On 
                                input(type='date', name='enddate')                                      
                div.form-group
                    label.col-sm-3.control-label(for='direction') Inflow/Outflow
                    div.col-sm-9
                        div.radio
                            label
                                input(type="radio" name="directionOptions" id="directionOption1" value="inflow" checked)
                                | Inflow
                        div.radio
                            label
                                input(type="radio" name="directionOptions" id="directionOption2" value="outlow")
                                | Outflow
                div.form-group
                    label.col-sm-3.control-label(for='from') From
                    div.col-sm-9
                        input#from.form-control(type='text', name='from')
                div.form-group
                    label.col-sm-3.control-label(for='credit') Credit
                    div.col-sm-9
                        input#credit.form-control(type='text', name='credit')  
                div.form-group
                    label.col-sm-3.control-label(for='to') To
                    div.col-sm-9
                        input#from.form-control(type='text', name='to')
                div.form-group
                    label.col-sm-3.control-label(for='debit') Debit
                    div.col-sm-9
                        input#debit.form-control(type='text', name='debit')  
                div.form-group
                    button.btn.btn-primary(type="submit") Save      
                    button.btn.btn-default(type="button") Cancel


block scripts
    <!-- D3 Chart JavaScript -->
    script(src='/bower_components/d3/d3.min.js' charset='utf-8' type='text/javascript')

    <!-- C3 Chart JavaScript -->
    script(src='/bower_components/c3/c3.min.js' type='text/javascript')

    <!-- jQuery -->
    script(src="/bower_components/jquery/dist/jquery.min.js" type="text/javascript")
    
    <!-- Bootstrap Core JavaScript -->
    script(src="/bower_components/bootstrap/dist/js/bootstrap.min.js" type="text/javascript")

    <!-- Metis Menu Plugin JavaScript -->
    script(src="/bower_components/metisMenu/dist/metisMenu.min.js" type="text/javascript")

    <!-- DataTables JavaScript -->
    script(src="/bower_components/datatables/media/js/jquery.dataTables.min.js" type="text/javascript")
    script(src="/bower_components/datatables-plugins/integration/bootstrap/3/dataTables.bootstrap.min.js" type="text/javascript")

    <!-- Custom Theme JavaScript -->
    script(src="/bower_components/sb-admin-2/js/sb-admin-2.js" type="text/javascript")
    
    script(type="text/javascript").
        $(document).ready(function() {
            $('#datatable-balances').DataTable({
                "responsive": true,
                "bPaginate": false,
                "bJQueryUI": true,
                "bLengthChange": true,
                "bFilter": false,
                "bSort": false,
                "bInfo": true,
                "bAutoWidth": true,
                "bProcessing": true,
                "iDisplayLength": 10,
            });
            $(".dropdown-menu li a").click(function(){
                var selText = $(this).text();
                $(this).parents('.btn-group').find('.dropdown-toggle').html(selText+' <span class="caret"></span>');
                if (selText == "Weekly") {
                    $("#unit").html(" Weeks");
                }
                if (selText == "Monthly") {
                    $("#unit").html(" Months");
                }                
                if (selText == "Yearly") {
                    $("#unit").html(" Years");
                }                
            });
        });

